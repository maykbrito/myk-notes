{
  "name": "myk-notes",
  "devDependencies": {
    "@biomejs/biome": "^2.2.0"
  },
  "packageManager": "bun@1.2.22",
  "private": true,
  "scripts": {
    "check": "biome check --write .",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "dev:server": "bun run --filter @myk-notes/backend dev",
    "dev:setup": "bun run --filter @myk-notes/backend dev:setup"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "convex": "^1.27.0",
      "@types/node": "^22.13.13",
      "typescript": "^5.8.3"
    }
  }
}